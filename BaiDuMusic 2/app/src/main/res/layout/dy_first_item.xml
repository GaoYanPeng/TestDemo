<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="280dp">
    <ImageView
        android:scaleType="fitXY"
        android:src="@mipmap/trends_guide_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
    <RelativeLayout
        android:paddingLeft="@dimen/main_ten"
        android:paddingRight="@dimen/main_ten"
        android:paddingTop="@dimen/mian_five_top"
        android:paddingBottom="@dimen/mian_five_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/coloBGNormal"
            android:layout_centerVertical="true"
            android:text="热门话题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/coloBGNormal"
            android:textSize="@dimen/small_text"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/image"
            android:text="更多"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/image"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_songlist_detail_nor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dy_first_item_rly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>