<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginRight="@dimen/main_ten"
              android:orientation="vertical"
              android:paddingBottom="@dimen/main_ten">

    <ImageView

        android:id="@+id/firs_one_item_pic"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:scaleType="fitXY"/>

    <TextView
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_below="@id/firs_one_item_pic"
        android:id="@+id/first_one_item_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/main_title_margM"
        android:textColor="@android:color/black"
        android:textSize="@dimen/main_title_margX"/>
    <TextView
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/first_one_item_title"
        android:id="@+id/first_one_item_title_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/main_title_margX"/>


</RelativeLayout>