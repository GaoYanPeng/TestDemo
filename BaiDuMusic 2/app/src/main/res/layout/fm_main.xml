<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@android:color/white"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/main_oooo"
        android:background="#00b4ff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_22"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="#00b4ff"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_tab_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dian_13dp"
                android:src="@mipmap/ic_gengduo_normal"/>

            <android.support.design.widget.TabLayout
                android:id="@+id/main_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/main_title_margL"
                android:layout_marginRight="@dimen/main_title_margL"
                android:layout_toLeftOf="@+id/main_tab_sousuo"
                android:layout_toRightOf="@+id/main_tab_normal"/>

            <ImageView
                android:id="@+id/main_tab_sousuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/main_title_image_padding"
                android:src="@mipmap/sousuo"/>
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/main_vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"/>


    </LinearLayout>

</LinearLayout>