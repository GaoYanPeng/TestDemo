<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:paddingTop="@dimen/dp_6"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginLeft="@dimen/main_title_margX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_classify_img07"
            android:id="@+id/lick_image_heard"
            android:scaleType="fitXY"
            android:layout_width="@dimen/dian_65dp"
            android:layout_height="@dimen/dian_60dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="@dimen/main_ten"
        android:layout_marginRight="@dimen/dp_22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/coloBGNormal"
            android:textSize="@dimen/sp_14"
            android:id="@+id/lick_it_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/lick_it_song_name"
            android:id="@+id/lick_it_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/lick_item_smaple"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/bt_recsong_more_press"
            android:layout_width="@dimen/item_crun_fm_seven"
            android:layout_height="@dimen/item_crun_fm_seven"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</LinearLayout>