<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_10"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_album"
            android:layout_width="@dimen/dian_45dp"
            android:layout_height="@dimen/dian_45dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/green" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dian_14dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#abbbbb"
                android:textSize="@dimen/dian_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dian_5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dian_15dp"
                    android:textColor="#aaaaaa"
                    android:textSize="@dimen/dian_12sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>