<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:scaleType="fitXY"
        android:src="@mipmap/abc_list_selector_disabled_holo_dark"/>

    <!--app:cardElevation="7dp"-->
    <!--app:cardCornerRadius="3dp"-->
    <android.support.v7.widget.CardView
        android:id="@+id/pop_tow_card"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="#ffffff"
        app:cardCornerRadius="3dp"
        app:cardElevation="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/default_album_playing_new">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/bt_playpage_button_searchpicandlyric_normal_new"/>

            <ImageView
                android:id="@+id/pop_tow_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/pop_tow_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pop_tow_card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_14"
        android:text="长大的通话 "
        android:textColor="@color/coloBGNormal"
        android:textSize="@dimen/main_title_S_marg_pop"/>

    <TextView

        android:id="@+id/pop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pop_tow_song_name"
        android:layout_centerHorizontal="true"
        android:text="长大的通话 "
        android:textColor="@color/coloBGNormal"
        android:textSize="@dimen/sp_12"/>

</RelativeLayout>