<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingRight="@dimen/main_ten"
              android:paddingLeft="@dimen/main_ten"
              android:paddingTop="@dimen/main_ten"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/main_ten">

        <ImageView

            android:id="@+id/third_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/bt_minibar_next_normal"/>

        <TextView
            android:id="@+id/third_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/third_item_image"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/songlist_third_detail_nor"
            android:text="更多"/>

        <ImageView
            android:id="@+id/songlist_third_detail_nor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_songlist_detail_nor"/>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginBottom="@dimen/mian_item_title_image_heightX"
        android:id="@+id/recom_third_item_ry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>